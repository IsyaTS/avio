#!/usr/bin/env bash
# Shortcut to run the chat simulator with optional arguments.
set -euo pipefail
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
VENV_PYTHON="$SCRIPT_DIR/.venv/bin/python"
if [[ ! -x "$VENV_PYTHON" ]]; then
  echo "Python в .venv не найден. Установите окружение перед запуском." >&2
  exit 1
fi
exec "$VENV_PYTHON" "$SCRIPT_DIR/scripts/chat_simulator.py" "$@"
